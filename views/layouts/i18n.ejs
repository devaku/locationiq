<script>
    // =======================
    // TRANSLATIONS RELATED
    // =======================
    jquery351 = jQuery.noConflict(true);

    function ReloadTranslation() {
        let lang = document.documentElement.lang;
        // console.log('jquery351: ', jquery351.fn.jquery);
        // console.log('LANGUAGE: ', lang);
        jquery351(function ($) {
            $.i18n({
                locale: lang,
            })
                .load({
                    en: `https://${window.location.hostname}/js/i18n/languages/en.json`,
                    th: `https://${window.location.hostname}/js/i18n/languages/th.json`,
                })
                .done(function () {
                    // console.log('Translating everything to: ', lang);
                    // console.log($('html'));
                    $('html').i18n();
                });
        });
    }
</script>
